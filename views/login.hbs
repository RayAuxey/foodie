<style>
  .form-area {
    width: 600px;
    margin: 4rem auto;
  }

  form input {
    width: 100%;
    padding: 0.5rem;
    margin-bottom: 1rem;
  }

  label {
    font-weight: 600;
  }

  .cta {
    font-size: 1.5em;
    padding: 0.5rem 1rem;
    background: #e8015a;
    border: none;
    border-radius: 5px;
    color: white;
    font-weight: 600;
    cursor: pointer;
  }

  .cta:hover {
    background: #a50140;
  }

  .error {
    background: rgb(197, 4, 4);
    padding: 1rem 2rem;
    font-weight: bold;
    border-radius: 5px;
    color: white;
    letter-spacing: 1px;
  }
</style>

<div class="">
  {{>header}}

  <div style="height: 60px;"></div>
  <div class="inner form-area">
    {{#if error}}
    <div class="error mb-2">{{error}}</div>
    {{/if}}
    <h1 class="mb-2">Sign In</h1>
    <form action="/users/login" method="POST">
      <label>
        Email
        <input type="email" name="email" id="">
      </label>
      <label>
        Password
        <input type="password" name="password" id="">
      </label>
      <button class="cta">Sign In</button>
    </form>
  </div>
  {{>footer}}
</div>