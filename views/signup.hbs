<style>
  .form-area {
    width: 600px;
    margin: 4rem auto;
  }

  form input {
    width: 100%;
    padding: 0.5rem;
    margin-bottom: 1rem;
  }

  label {
    font-weight: 600;
  }

  .cta {
    font-size: 1.5em;
    padding: 0.5rem 1rem;
    background: #e8015a;
    border: none;
    border-radius: 5px;
    color: white;
    font-weight: 600;
    cursor: pointer;
  }

  .cta:hover {
    background: #a50140;
  }
</style>

<div class="">
  {{>header}}
  <div style="height: 60px;"></div>
  <div class="inner form-area">
    <h1 class="mb-2">Create Account</h1>
    <form>
      <label>
        First Name
        <input type="text" name="name" id="">
      </label>
      <label>
        Last Name
        <input type="text" name="name" id="">
      </label>
      <label>
        Email
        <input type="email" name="name" id="">
      </label>
      <label>
        Password
        <input type="password" name="name" id="">
      </label>
      <button class="cta">Sign Up</button>
    </form>
  </div>
  {{>footer}}
</div>